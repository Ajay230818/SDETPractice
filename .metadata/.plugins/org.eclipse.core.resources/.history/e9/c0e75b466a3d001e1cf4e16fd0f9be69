		Assert.assertEquals(0, 0);
	}
	
	@Test
	public void test2() {
		
	}
	
	@Test
	public void test3() {
		
	}

	public boolean spynum(int num) {
		// TODO Auto-generated method stub
		int sum=0;
		int prod=1;
		int digit=1;
		while(num>0) {
			digit=num%10;
			sum=sum+digit;
			prod=prod*digit;
			num=num/10;		
		}
		if(prod==sum) {
			return true;
		} else {
			return false;
		}
	}
	

}
