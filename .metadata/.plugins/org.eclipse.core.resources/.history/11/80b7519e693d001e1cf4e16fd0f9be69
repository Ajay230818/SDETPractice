package mandatoryHomeWork.foundation;

public class Qchallenge11SpyNumber {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num=132;
		int sum=0;
		int prod=1;
		int digit=1;
		while(num>0) {
			digit=num%10;
			sum=sum+digit;
			prod=prod*digit;
			num=num/10;		
		}
		System.out.println(prod);
		System.out.println(sum);
	}

}
